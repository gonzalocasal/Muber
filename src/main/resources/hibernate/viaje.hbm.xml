<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ar.com.grupo27.model.Viaje" table="VIAJE">
		<id name="id" type="int" column="ID_VIAJE" >
			<generator class="native"/>
		</id>
	 	<property name="origen" column="ORIGEN" type="string"/>
   		<property name="destino" column="DESTINO" type="string"/>
	 	<property name="costo" column="COSTO" type="int"/>
	 	<property name="capacidad" column="MAX_PASAJEROS" type="int"/>
	 	<property name="abierto" column="ABIERTO" type="boolean"/>
	 	
	 	<many-to-one name="conductor" class="ar.com.grupo27.model.Conductor" fetch="select">
            <column name="ID_CONDUCTOR" not-null="false" />
        </many-to-one>
		
		<bag name="pasajeros" inverse="false" fetch="select" table="VIAJE_PASAJERO">
          <key column="ID_VIAJE" />
          <many-to-many column="ID_PASAJERO"  class="ar.com.grupo27.model.Pasajero"/>
      	</bag>
      	
      	
		<!--
	 	<set name="calificaciones" access="field" lazy="false" fetch="join" >
	    	<key column="ID_VIAJE" />
	    	<one-to-many  class="ar.com.grupo27.model.Calificacion" />
		</set>
	 	-->
	</class>
</hibernate-mapping>
