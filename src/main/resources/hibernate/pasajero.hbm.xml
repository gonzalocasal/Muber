<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="ar.com.grupo27.model.Pasajero" table="PASAJERO">
		
		<id name="id" type="int" column="ID_PASAJERO" >
			<generator class="native"/>
		</id>
	 	<property name="usuario" column="USUARIO" type="string"/>
	 	<property name="nombre" column="NOMBRE" type="string"/>
	 	<property name="apellido" column="APELLIDO" type="string"/>
	 	<property name="fechaAlta" column="FECHA_ALTA" type="date"/>
		<property name="saldo" column="SALDO" type="double"/>

		<bag name="viajes"  inverse="true" fetch="select"  table="VIAJE_PASAJERO" >
          <key column="ID_PASAJERO" />
          <many-to-many column="ID_VIAJE" class="ar.com.grupo27.model.Viaje"/>
      	</bag>
	 
	</class>
</hibernate-mapping>
